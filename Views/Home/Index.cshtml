@model User
@{
ViewData["Title"] = "Home Page";
}
<div>
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>
    <div class="d-flex justify-content-around">
        <div class="d-inline-flex p-3">
            <form asp-action="Register" asp-controller="Home" method="POST">
                <div>
                    <h3 class="text-center">Register</h3>

                    <div class="form-group row">
                        <!--<span class="alert-danger, span" asp-validation-for="FirstName"></span>-->
                        <label class="col-sm-4 col-form-label" asp-for="FirstName">First Name:</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="FirstName" placeholder="Enter First Name" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <!--<span class="alert-danger, span" asp-validation-for="LastName"></span>-->
                        <label class="col-sm-4 col-form-label" asp-for="LastName">Last Name:</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="LastName" placeholder="Enter Last Name" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <!--<span class="alert-danger, span" asp-validation-for="Email"></span>-->
                        <label class="col-sm-4 col-form-label" asp-for="Email">Email:</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Email" placeholder="Enter Email" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <!--<span class="alert-danger, span" asp-validation-for="Password"></span> -->
                        <label class="col-sm-4 col-form-label" asp-for="Password">Password:</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Password" placeholder="Enter Password" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <!--<span class="alert-danger, span" asp-validation-for="PWC"></span> -->
                        <label class="col-sm-4 col-form-label" asp-for="PWC"></label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="PWC" placeholder="Enter Confirm Password" />
                        </div>
                    </div>
                </div>
                <input type="submit" class="btn btn-primary">
            </form>
        </div>
        <div class="hw"><br><br><br>
            <span class="alert-danger, span" asp-validation-for="FirstName"></span><br><br>
            <span class="alert-danger, span" asp-validation-for="LastName"></span><br><br>
            <span class="alert-danger, span" asp-validation-for="Email"></span><br><br><br>
            <span class="alert-danger, span" asp-validation-for="Password"></span>
            <span class="alert-danger, span" asp-validation-for="PWC"></span><br>
        </div>
        <div>
            <partial name="_login" />
        </div>
    </div>
    <div>
        <!--<span class="alert-danger, span" asp-validation-for="Password"></span>-->
    </div>
</div>