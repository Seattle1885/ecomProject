@model Product
<h1>Welcome @ViewBag.LoginUser.FirstName @ViewBag.LoginUser.LastName to the Edit Page</h1>
<div class="d-flex justify-content-around">
    <div class="d-inline-flex p-3">
        <form action="/UpdateProduct/@ViewBag.Product.ProductId" method="post">
            <h3>Edit Your Product</h3>

            <div class="form-group row">
                <label class="col-sm-8 col-form-label">Name:</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ProductName" value="@ViewBag.Product.ProductName" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Description:</label>
                <div class="col-sm-10">
                    <!--placeholder works too just a little different-->
                    <input class="form-control" asp-for="Description" value="@ViewBag.productDescription"></input>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-5 col-form-label">Initial Quantity</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" asp-for="Quantity"
                        value="@ViewBag.Product.Quantity" /><br>
                </div>
            </div>
            <input type="submit" value="Update" class="btn btn-success" />
        </form>
    </div>

    <div class="hw"><br><br><br>
        <span class="alert-danger, span" asp-validation-for="ProductName"></span><br><br>
        <span class="alert-danger, span" asp-validation-for="Description"></span><br><br>
        <span class="alert-danger, span" asp-validation-for="Quantity"></span><br><br><br>
    </div>
</div>